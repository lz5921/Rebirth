{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> site-header}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
  {{> post-header}}
  <main class="main-content">
    <div class="container-sm">
      <div class="row post-content-main">
        <article class="{{post_class}} col-12 col-sm-12 col-md-9 col-lg-9 col-xl-9 px-0 borderbox post-content article-main">
          {{content}}
        </article>
        <div class="d-none d-sm-none d-md-block col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 px-0 article-toc-area">
          <nav id="site-toc" data-toggle="toc" class="sticky-top article-toc-nav">
            <div class="toc-title">文章目录：</div>
          </nav>
        </div>
      </div>
      {{> post-tools}}
      {{> post-copyright}}
      {{> post-footer-author}}
      {{> post-read-next}}
      {{> post-comment}}
    </div>
  </main>
{{/post}}
