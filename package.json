{
  "name": "rebirth",
  "version": "1.0.6",
  "engines": {
    "ghost-api": "v3"
  },
  "keywords": [
    "ghost-theme"
  ],
  "scripts": {
    "serve": "webpack --watch --config config/webpack.dev.babel.js --mode development ",
    "build": "webpack --config config/webpack.prod.babel.js --mode production --env.production && node config/build.js",
    "eslint": "eslint src/**/*.js",
    "eslint-fix": "eslint src/**/*.js --fix"
  },
  "license": "MIT",
  "author": {
    "email": "i@iiong.com",
    "name": "Jaxson Wang"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.8.6",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "^3.5.2",
    "cssnano": "^4.1.8",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "extract-loader": "^5.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^6.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "node-sass": "^4.11.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "8.0.2",
    "style-loader": "1.1.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "core-js": "^3.6.5"
  },
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
